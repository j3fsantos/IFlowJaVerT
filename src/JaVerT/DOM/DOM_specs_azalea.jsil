	[[ (xthis == #pn) * (n == #nn) * ElementNodeSpecial(#nn, #name, #att, #children, #pn) ]]
	[[ ElementNodeSpecial(ret, #name, #att, #children, $$null) ]]
	normal;
*)

only spec removeChild(xsc, xthis, n)
	[[ (xthis == #pn) * (n == #nn) 
		* Forest(#alpha, {{"elem", #pn, #name, #att, #children}}) * (#children == #beta1 @ ({{"elem", #nn, #name1, #att1, #children1}} @ #beta_2))
		* Grove(#gamma, {{}})
	]]
	[[ Forest(#alpha, {{"elem", #pn, #name, #att, (#beta1 @ #beta2)}}) * Grove(#gamma, {{ {{ "elem", #nn, #name1, #att1, #children1 }} }}) ]]
	normal


only spec appendChild(xsc, xthis, newchild)
	[[ (xthis == #dn) * (newchild == #en) * DocumentNode(#dn, $$null, {{"elem", #en, #name, #att, #children}} @ #g)]]
	[[ DocumentNode(#dn, #en, #g) * (ret == #en) ]]
	normal

