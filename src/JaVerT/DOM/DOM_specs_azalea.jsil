only spec createElement(xsc, xthis, x)
	[[ (xthis == #dn) * (x == #name) * DocumentNode(#dn, #element, #g) ]]
	[[ DocumentNode(#dn, #element, ({{"elem", ret, #name, {{}}, {{}}}} @ #g))  ]]
	normal

