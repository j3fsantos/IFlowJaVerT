pred interval (x, a, b) : 
	((a <=# b) * (a <=# x) * (x <=# b) * types(x: $$int_type, a: $$int_type, b: $$int_type));

spec interval_addition (x, a, b)
   [[ interval(x, a, b) * (a == #a) * (b == #b) * types (#a: $$int_type, #b: $$int_type, #c: $$int_type, #d: $$int_type) ]]
   [[ (#c == (#a + 1)) * (#d == (#b + 1)) * interval(ret, #c, #d) * types (#a: $$int_type, #b: $$int_type, #c: $$int_type, #d: $$int_type) ]]
   normal
proc interval_addition (x, a, b) {
			x := x + 1;
   rlab:	skip
} 
with 
{ 
	ret: x, rlab; 
};